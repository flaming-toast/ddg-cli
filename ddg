#!/usr/bin/env perl
use strict;
use warnings;
use LWP::Simple;
use HTML::Entities;
use Unicode::Escape qw/escape unescape/;
use encoding 'utf-8';

# Process arguments, construct the query to be passed to the API.
print "Your query was: @ARGV\n";
my $query = join("+", @ARGV); 

# grab json response
my $content = get("http://api.duckduckgo.com/?q=$query&format=json&pretty=1");
    die "Unable to query DuckDuckGo API" unless defined $content;
my @content = split("\n", $content);

sub decode {
	my $result = $_[0];
	$result = unescape(decode_entities($result));
	$result =~ s/\\//g;
	print "-- " . $result . "\n";
}
	
# Extract definition and AbstractText fields
foreach (@content) { 
	if (/\"Definition\" : \"(.*)\",/) {
		if ($1 =~ m/^[\s]*$/) {
			next;	
		}
		decode($1);
	}
	if (/\"AbstractText\" : \"(.*)\"/) {
		if ($1 =~ m/^[\s]*$/) {
			next;	
		}
		decode($1);
		last;
	}
}



